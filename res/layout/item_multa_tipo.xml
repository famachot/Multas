<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text_infraccion_frecuente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/text_tipo_multa" />

    <TextView
        android:id="@+id/text_incidencia"
        style="@style/estiloTextViewHora"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text_infraccion_frecuente"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:text="@string/txt_frecuente"
        android:visibility="gone" />

</RelativeLayout>
