<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="@string/pueblaAyto" 
        android:textColor="@color/colorBlanco"/>

    <TextView
        android:id="@+id/fundamento_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pueblaAytoEmpresa" 
        android:textColor="@color/colorBlanco"/>

    <ImageView
        android:id="@+id/img_item_frecuente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_ayuntamiento_original" />

    <TextView
        android:id="@+id/titulo_fundamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/versionApp"
        android:textColor="@color/colorBlanco" />

    <TextView
        android:id="@+id/titulo_multa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/colorBlanco"
        android:text="@string/pueblaAytoDerechos" />

</LinearLayout>
