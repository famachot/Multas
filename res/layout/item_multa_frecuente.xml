<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_vertical" >

    <ImageView
        android:id="@+id/img_item_frecuente"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/frecuente_1" 
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/text_infraccion_frecuente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_item_frecuente"
        android:layout_toEndOf="@+id/img_item_frecuente"
        android:text="@string/infraccion" />

    <TextView
        android:id="@+id/text_num_incidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_infraccion_frecuente"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/azul_detalle"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/num_frecuente_id"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ver_mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_infraccion_frecuente"
        android:layout_alignStart="@+id/text_infraccion_frecuente"
        android:layout_below="@id/text_infraccion_frecuente"
        android:text="@string/ver_mas"
        android:textColor="@color/azulAyuntamiento" />

</RelativeLayout>
